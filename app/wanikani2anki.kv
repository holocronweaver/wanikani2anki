#:kivy 1.0.9

#:set window_background_off_white (0.921569, 0.921569, 0.921569, 1)
#:set dark_text_color (0.333333, 0.333333, 0.333333, 1)

#:set input_background_white (0.964706, 0.964706, 0.964706, 1)
#:set input_text_grey (0.6, 0.6, 0.6, 1)
#:set error_text_reddish (0.725490, 0.290196, 0.282353, 1)
#:set error_text_background_grey (0.949020, 0.870588, 0.870588, 1)
#:set error_text_border_grey (0.831373, 0.831373, 0.831373, 1)

#:set background_light_grey (0.835294, 0.835294, 0.835294, 1)

#:set togglebutton_selected_dark_grey (0.533333, 0.533333, 0.533333, 1)
#:set togglebutton_unselected_light_grey (0.882353, 0.882353, 0.882353, 1)

#:set button_text_off_white (0.980392, 0.980392, 0.980392, 1)
#:set deep_pink (1, 0, 0.666667, 1)
#:set light_blue (0, 0.654901, 0.984313, 1)
#:set purple (0.596078, 0.196078, 0.698039, 1)

<TextInputPlus>:
    foreground_color: input_text_grey
    background_color: input_background_white
    multiline: False

<ErrorLabel>:
    text: ''
    border_margin: 2
    color: error_text_reddish
    background_color: error_text_background_grey
    border_color: error_text_border_grey

<Margin@Label>:

<OptionMargin@Margin>:
    size_hint_y: None
    height: 10

<NavigationButton@Button>:
    font_size: 30
    color: button_text_off_white
    size_hint_y: None
    height: 50
    background_normal: ''

<NavigationWidget@BoxLayout>:
    size_hint_y: None
    height: self.children[0].height
    orientation: 'vertical'

    NavigationButton:
        text: 'Continue'
        on_press: app.root.next_screen()
        background_color: light_blue

    BoxLayout:
        size_hint_y: None
        height: self.children[0].height

        NavigationButton:
            text: 'Back'
            on_press: app.root.prev_screen()
            background_color: purple
        NavigationButton:
            text: 'Exit'
            on_press: exit()
            background_color: deep_pink

<WKToggleButton>:
    font_size: 30
    color: dark_text_color
    color_normal: (0.5, 0.5, 0.5, 1)
    color_down: (1, 1, 1, 1)
    size_hint_y: None
    height: 100
    background_normal: ''
    background_down: ''
    # background_color: togglebutton_unselected_light_grey
    background_color_normal: togglebutton_unselected_light_grey
    background_color_down: togglebutton_selected_dark_grey
    state: 'normal'
    halign: 'center'
    post_fix: self.on_state(self, self.state)

<WKBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: window_background_off_white
        Rectangle:
            pos: self.pos
            size: self.size


<APIKeyScreen>:
    WKBoxLayout:
        size: self.parent.size
        orientation: 'vertical'

        Image:
            source: 'media/images/WaniKani2AnkiLogo.png'
            height: '256px'
            size_hint_y: None

        Label:
            # font_name: 'media/_NotoSansCJKjp-Regular.min'
            text: 'WaniKani 2 Anki'
            font_size: 40
            color: dark_text_color
            height: 50
            size_hint_y: None

        Label:
            # font_name: 'media/_NotoSansCJKjp-Regular.min'
            text: 'Create a personalized Anki deck from your WaniKani account.'
            font_size: 25
            height: 50
            size_hint_y: None
            color: dark_text_color

        Margin:

        ErrorLabel:
            id: error_label
            font_size: 16
            size_hint_y: None
            height: 40
            # background_color:
            # foreground_color: error_text_border_grey

        Margin:
            size_hint_y: None
            height: 7

        BoxLayout:
            height: 50
            size_hint_y: None

            Margin:

            Label:
                # font_name: 'media/_NotoSansCJKjp-Regular.min'
                text: 'WaniKani API V2 key   '
                font_size: 18
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                color: dark_text_color
                width: 180
                size_hint_x: None

            TextInputPlus:
                text: ''
                id: apikey_input
                on_text_validate: root.process_apikey()
                focus: True
                font_size: 30
                width: 590
                size_hint_x: None

            Margin:


        Label:
            # font_name: 'media/_NotoSansCJKjp-Regular.min'
            # font_name: 'media/Ubuntu-R'
            text: u'Your API key can be found on the WaniKani website under Menu -> Settings -> Account -> API Version 2.'
            font_size: 16
            valign: 'top'
            color: dark_text_color
            size_hint_y: None
            height: 80

        NavigationButton:
            text: 'Start'
            on_press: root.process_apikey()
            background_color: light_blue

        NavigationButton:
            text: 'Exit'
            on_press: exit()
            background_color: deep_pink


<PickDeckTypeScreen>:
    WKBoxLayout:
        size: self.parent.size
        orientation: 'vertical'

        Margin:
            size_hint_y: None
            height: 20

        Label:
            text: 'Choose a deck type'
            font_size: 60
            color: dark_text_color
            valign: 'bottom'

        ErrorLabel:
            id: error_label
            font_size: 20
            size_hint_y: None
            height: 40

        Margin:
            size_hint_y: None
            height: 7

        WKToggleButton:
            text: 'Classic\n' + 'Match WaniKani as closely as possible.'
            deck_type: 'classic'
            group: 'deck_type'
        OptionMargin:
        WKToggleButton:
            text: 'Plus\n' + 'Make a few improvements over WaniKani.'
            deck_type: 'plus'
            group: 'deck_type'
        OptionMargin:
        WKToggleButton:
            text: 'Advanced\n' + 'Choose your own mix of deck options.'
            deck_type: 'advanced'
            group: 'deck_type'
        OptionMargin:

        NavigationWidget:


<AdvancedDeckOptionsScreen>:
    WKBoxLayout:
        orientation: 'vertical'

        Margin:
            size_hint_y: None
            height: 10

        Label:
            text: 'Advanced Deck Options'
            color: dark_text_color
            font_size: 60

        ErrorLabel:
            id: error_label
            font_size: 24
            size_hint_y: None
            height: 40

        Margin:
            size_hint_y: None
            height: 10

        BoxLayout:
            size_hint_y: None
            height: 50

            Margin:
            Label:
                text: 'Burn years'
                color: dark_text_color
                font_size: 30
                halign: 'right'
            TextInputPlus:
                id: burn_years
                text: '5'
                font_size: 30
                # size_hint_x: None
                # width: 80
            Margin:

        OptionMargin:
        WKToggleButton:
            id: enable_audio
            text: 'Enable audio'
            state: 'down'
            font_size: 30
        OptionMargin:
        WKToggleButton:
            id: separate_meaning_and_reading
            text: 'Separate meaning and reading cards'
            font_size: 30
        OptionMargin:

        NavigationWidget:


<DownloadScreen>:
    WKBoxLayout:
        id: root_layout
        orientation: 'vertical'

        Margin:
            size_hint_y: None
            height: 10

        Label:
            text: "Select 'Create Deck' to\nbegin download from WaniKani."
            font_size: 40
            color: dark_text_color
            halign: 'center'

        Label:
            text: 'Progression: {}%'.format(int(progressbar.value))
            font_size: 40
            color: dark_text_color
            size_hint_y: None
            height: '48dp'

        BoxLayout:
            Margin:
                size_hint_x: None
                width: 20
            ProgressBar:
                id: progressbar
                max: 100
                value: root.progress
                # size_hint_y: None
                # height: 100
            Margin:
                size_hint_x: None
                width: 20

        BoxLayout:
            id: create_deck_container
            size_hint_y: None
            height: create_deck.height

            NavigationButton:
                id: create_deck
                text: 'Create Deck'
                on_press: root.next_screen()
                background_color: light_blue
        NavigationButton:
            text: 'Cancel'
            on_press: root.prev_screen()
            background_color: purple


<FinishScreen>:
    WKBoxLayout:
        Button:
            text: 'Finished!\nTODO: help user import deck into anki.\nClick to exit.'
            halign: 'center'
            on_press: exit()
            font_size: 38
            color: button_text_off_white
            background_normal: ''
            background_color: light_blue
